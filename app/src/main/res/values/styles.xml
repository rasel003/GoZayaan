    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <!--Remove any scrim insets applied by NavigationView for system bars-->
        <item name="insetForeground">@android:color/transparent</item>
        <!--Set the background color of NavigationView-->
        <!-- <item name="android:background">@android:color/transparent</item>-->

        <item name="elevation">0dp</item>

        <!-- item background color drawable-->
        <!--  <item name="itemBackground">@drawable/navigation_item_background</item>-->
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>

        <item name="itemTextAppearance">@style/TextAppearance.App.Body2</item>
        <item name="itemTextColor">@color/color_on_surface_emphasis_medium</item>
        <item name="itemIconTint">@color/color_on_surface_emphasis_medium</item>
    </style>

    <style name="Widget.Owl.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.BottomNavigation</item>
    </style>

    <style name="Widget.App.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="closeIconSize">0dp</item>
        <item name="closeIconEnabled">false</item>
        <item name="chipIcon">@drawable/avatar_none</item>
        <item name="chipIconSize">@dimen/chip_icon_diameter</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:checkable">false</item>
    </style>

